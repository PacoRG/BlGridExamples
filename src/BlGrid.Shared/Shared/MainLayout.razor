@using DnetSpinnerComponent

<DnetOverlay></DnetOverlay>
<DnetSpinner CanRun="true" BindToView="true" ShowMask="true"></DnetSpinner>

<DesktopLayout>
    <DesktopLeftColumn>
        <DesktopNavigation>
            <DesktopNavigationMenu Menus="@Menus"></DesktopNavigationMenu>
            <DesktopMinifyMenu></DesktopMinifyMenu>
        </DesktopNavigation>
    </DesktopLeftColumn>
    <DesktopCenterColumn>
        <DesktopLayoutCenterContainer>
            <DesktopHeader>
                <DesktopHeaderContent AppName="@AppName" AppDescription="@AppDescription" AppVersion="@AppVersion" UserName="@UserName" PersonName="@PersonName">
                    <span class="blg-logo blg-logo-img"></span>
                </DesktopHeaderContent>
            </DesktopHeader>
            <DesktopContent>
                @Body
            </DesktopContent>
            <DesktopFooter>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center justify-content-start dnet-p-l-20">
                        <span>2020 © BlGrid by Datalnet</span>
                    </div>
                    <div class="d-flex align-items-center justify-content-start  dnet-p-r-20">
                        <div class="widget">
                            <a class="btn" href="#nogo" rel="noopener" target="_blank" aria-label="Star ag-grid/ag-grid on GitHub">
